<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:id="@+id/bhvhgcgcfxgcnnb"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/match_no_text"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Match 1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/red"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/img_3" >

            <TextView
                android:id="@+id/team_name_1_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Mumbai Indians"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/team_name_2_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="Chennai Super Kings"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/match_results_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mumbai Indians win by 25 runs"
            android:textSize="22dp"
            android:layout_marginVertical="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"

            />

    </LinearLayout>


</androidx.cardview.widget.CardView>