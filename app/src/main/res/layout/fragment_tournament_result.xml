<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen_ongoing"
        android:visibility="gone"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/input_team_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_bg2"
            android:ems="18"
            android:padding="10dp"
            android:hint="Enter first Team Name"
            android:minHeight="55dp"
            android:layout_centerHorizontal="true"
            />


        <View
            android:id="@+id/versus_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/input_team_1_name"
            android:layout_marginVertical="30dp"

            android:background="@drawable/img_1" />

        <EditText
            android:id="@+id/input_team_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_bg2"
            android:ems="18"
            android:padding="10dp"
            android:hint="Enter first Team Name"
            android:minHeight="52dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/versus_image"
            />


        <EditText
            android:id="@+id/input_match_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_bg2"
            android:ems="17"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:hint="Enter Match Result"
            android:minHeight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/input_team_2_name"
            />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_match_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@color/purple_500"
        android:text="Add Results" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textViewUpcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        tools:text="abcd"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/screen_finished"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"  >


        <EditText
            android:id="@+id/tournament_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_bg2"
            android:ems="17"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:hint="Enter Match Result"
            android:inputType="textMultiLine"
            android:minHeight="130dp"
            android:textAlignment="textStart"
            android:gravity="top|left"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/upload_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tournament_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:background="@color/purple_500"
            android:text="Add Results" />


    </RelativeLayout>

</RelativeLayout>