<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".StaffInfoActivity">

    <RelativeLayout
        android:id="@+id/pro_app_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Be a Staff"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/see_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/pro_bg"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Requests"

            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pro_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_staff_experience"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:src="@drawable/add_pic" />

            <TextView
                android:id="@+id/note_alert_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_staff_experience"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Add if u have experience as staff in tournaments"
                android:textColor="@color/purple_700"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_alert_team"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Choose area of work *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            app:cardCornerRadius="4dp">
                            <Spinner
                                android:id="@+id/edit_staff_spinner"
                                android:spinnerMode="dropdown"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:background="#f7f9f9" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/edit_staff"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textColor="#555555"
                           android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="6dp"/>
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Sport *"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_sport_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bt_bg2"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Video link (Drive link, youtube video link etc.) "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/video_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_bg2"
                        android:inputType="textUri"
                        android:minHeight="48dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="12dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="#6A6A6A"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Per Match Fees *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/per_match_fees_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_bg2"
                        android:hint="eg. 400"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="12dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="#6A6A6A"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Any Discount Percent if booked for tournament *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/discount_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_bg2"
                        android:hint="eg. 20"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="12dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="#6A6A6A"
                        android:textSize="15sp" />

                </LinearLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="22dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Sports"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >

                    <TextView
                        android:id="@+id/cricket_text"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro_white"
                        android:padding="15dp"
                        android:text="Cricket"
                        android:textSize="16dp"
                        android:layout_marginLeft="35dp"

                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/football_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro_white"
                        android:padding="15dp"
                        android:text="Football"
                        android:textSize="16dp"
                        android:textColor="@color/black"

                        app:layout_constraintEnd_toStartOf="@+id/kabaddi_text"
                        app:layout_constraintStart_toEndOf="@+id/cricket_text" />

                    <TextView
                        android:id="@+id/kabaddi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro_white"
                        android:padding="15dp"
                        android:text="Kabaddi"
                        android:textSize="16dp"
                        android:textColor="@color/black"

                        android:layout_marginRight="35dp"

                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/basketball_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro_white"
                        android:padding="15dp"
                        android:text="BasketBall"
                        android:textSize="16dp"

                        android:layout_marginVertical="15dp"
                        app:layout_constraintEnd_toStartOf="@+id/football_text"
                        android:textColor="@color/black"

                        app:layout_constraintStart_toEndOf="@+id/cricket_text"
                        app:layout_constraintTop_toBottomOf="@id/cricket_text" />

                    <TextView
                        android:id="@+id/volleyball_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro_white"
                        android:padding="15dp"
                        android:text="VolleyBall"
                        android:textSize="16dp"
                        android:textColor="@color/black"

                        app:layout_constraintEnd_toStartOf="@+id/kabaddi_text"
                        android:layout_marginVertical="15dp"

                        app:layout_constraintStart_toEndOf="@+id/football_text"
                        app:layout_constraintTop_toBottomOf="@id/cricket_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/button_submit_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_bg"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="Submit Details"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>