<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:id="@+id/bhvhgcgcfxgcnnb"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:id="@+id/full_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mkbjvhchchchc"
                android:layout_width="match_parent"
                android:clickable="false"
                android:layout_marginBottom="10dp"

                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/call_player"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_green"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:visibility="visible">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/leve_add"
                    android:layout_toEndOf="@+id/call_player"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/phone_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/material_motion_duration_long_1"
                        android:text="Sport"
                        android:textColor="@color/text_color"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/player_name_add">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mkbjhvchgcgtxtx"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/delete_player"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_black"
                        android:src="@drawable/ic_baseline_delete_24"/>

                    <ImageView
                        android:id="@+id/captain_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/letter_c"/>




                </LinearLayout>

                <TextView
                    android:id="@+id/leve_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.00002dp"
                android:background="#E1E1E1"/>


            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Matches: "
                    android:textColor="@color/text_color"/>
                <TextView
                    android:id="@+id/role_text"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.00002dp"
                android:background="#E1E1E1"/>








            <LinearLayout
                android:id="@+id/ly_add"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.00001dp"
                    android:background="#E1E1E1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>





            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>


